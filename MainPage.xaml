<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BreakTime.MainPage" x:Name="ftmMain">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,30">
            
            <Label x:Name="lblDisplay" Text="0 Minutes Left" FontSize="Title" Padding="0,75" HorizontalOptions="Center"/>
            
            <Button x:Name="btnFive" Text="Take 5" Clicked="BtnFive_OnClicked"/>
            
            <Button x:Name="btnTen" Text="Take 10" Clicked="BtnTen_OnClicked"/>
            
            <Button x:Name="btnFifteen" Text="Take 15" Clicked="BtnFifteen_OnClicked"/>

            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
